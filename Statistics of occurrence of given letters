#include <iostream>
#include <cstdlib>
#include <time.h>

using namespace std;

int main()
{
   	string tekst;
	int counter=0;
	cout<<"Wpisz dowolny tekst z uzyciem tylko malych liter: "<<endl;
	getline(cin, tekst);
	cout<<"Statystyka wystepowania danych liter"<<endl<<endl;
	for(int i=97;i<=122;i++)
    {
        for(int j=0;j<tekst.size();j++)
        {
            if(tekst[j]==(char)i)
                counter++;
        }
        if(counter>0)
            cout<<"Litera "<<(char)i<<" wystepuje "<<counter<<" razy"<<endl;
            counter=0;
    }

	return 0;
}
